# -*-shell-script-*-

PACKAGE=guile-dbi

DBI_MAJOR_VERSION=2
DBI_MINOR_VERSION=1
DBI_MICRO_VERSION=0

DBI_EFFECTIVE_VERSION=${DBI_MAJOR_VERSION}.${DBI_MINOR_VERSION}
DBI_VERSION=${DBI_EFFECTIVE_VERSION}.${DBI_MICRO_VERSION}
VERSION=${DBI_VERSION}

DBI_ITF_CURRENT=${DBI_MAJOR_VERSION}
DBI_ITF_REVISION=${DBI_MICRO_VERSION}
DBI_ITF_AGE=0
DBI_INTERFACE="${DBI_ITF_CURRENT}:${DBI_ITF_REVISION}:${DBI_ITF_AGE}"

